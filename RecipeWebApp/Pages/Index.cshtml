<div class="card-columns">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="card">
            <div class="card-img" style="background-image: url('@recipe.Image')"></div>
            <div class="card-body">
                <h5 class="card-title">@recipe.Title</h5>
            </div>
        </div>
    }
</div>